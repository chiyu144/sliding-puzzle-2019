{
  "env": {
    // "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended", "prettier/react"],
  "globals": {},
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react", "prettier"
  ],
  "rules": {
    "react/state-in-constructor": "off",
    "no-console":"off",
    "prettier/prettier": "error",
    "react/destructuring-assignment": [
      "error",
      "always",
      {
        "ignoreClassFields": true
      }
    ]
  }
}